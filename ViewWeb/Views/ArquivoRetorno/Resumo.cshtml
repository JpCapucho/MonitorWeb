
@{
    ViewBag.Title = "Resumo";
}
<div class="jumbotron">
    <h2>Resumo</h2>
    <p>Arquivo: @ViewBag.nomeArquivo</p>

    @foreach (var item in ViewBag.PreOrPos)
    {
        <p>@item.Chave - Quantidade: @item.Quantidade</p>
    }

    @foreach (var item in ViewBag.QtdaOcorrencias)
    {
        <p>Ocorrencia do Tipo - @item.Chave tem: <b>@item.Quantidade</b></p>
    }

</div>

<div class="arrow">

    <table id="data" class="stripe" style="width:100%">
        <thead>
            <tr>
                <th align="center">NossoNumero</th>
                <th align="center">Valor do Título</th>
                <th align="center">Cliente SGV</th>
                <th align="center">Tipo de Ocorrencia</th>
                <th align="center">Tipo de Cobrança</th>
            </tr>
        </thead>

            <tbody>
                @foreach (var item in ViewBag.Cobrancas)
                {
                    <tr>
                        <td align="center">@item.NossoNumero</td>
                        <td align="center">@item.ValorTitulo</td>
                        <td align="center">@item.ClienteId</td>
                        <td align="center">@item.TipoOcorrencia</td>
                        <td align="center">@item.TipoCobranca</td>
                    </tr>
                }
            </tbody>
